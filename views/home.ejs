<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <h1>Url Shortner</h1>
    <% if (locals.id) { %>
        <br>
        <a>URL Generated : http://localhost:8001/url/<%= id %></a>
        <br/>
    <% } %>
    <div>
        <form method="post" action="/url" >
            <label>
                Enter Your Original URL
                <input 
                    name="url"
                    type="text" 
                    placeholder="http://example.com">
                </label>
                <button type="submit">Generate</button>
        </form>
    </div>
    <br>
    <% if (locals.urls) { %>
        <table>
            <thead>
                <th>S.No</th>    
                <th>ShortId</th>    
                <th>Redirect</th>    
                <th>Clicks</th>    
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.ShortId %></td>
                    <td><%= url.redirectURL %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    <% } %>
</body>
</html>